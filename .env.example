# Database (локально: localhost; в Docker: db)
POSTGRES_USER=cip
POSTGRES_PASSWORD=cip
POSTGRES_DB=cip
DATABASE_URL=postgresql+asyncpg://cip:cip@localhost:5432/cip

# MinIO (файлы в кабинете; в Docker хост minio)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cip-files
MINIO_SECURE=false

# LLM (DeepSeek)
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_API_KEY=sk-xxx

# Prompt file path (relative to project root or absolute)
PROMPT_FILE=prompts/system_prompt.txt

# App
APP_HOST=0.0.0.0
APP_PORT=8000

# Auth (JWT) and email (confirmation link)
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080
FRONTEND_BASE_URL=http://localhost:8000

# SMTP: в Docker приложение само получит SMTP_HOST=mailpit из compose. Локально: укажите mailpit или свой сервер.
# Письма в Docker попадают в Mailpit — смотрите http://localhost:8025
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
